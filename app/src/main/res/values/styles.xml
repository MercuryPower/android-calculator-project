<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>

    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/workBlack</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">numberOnClick</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/workBlack</item>
        <item name="android:textSize">25sp</item>
        <item name="android:onClick">operatorOnClick</item>
    </style>
    <style name="buttonNumberHorizontal">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/workBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">numberOnClick</item>
    </style>
    <style name="buttonOperatorHorizontal">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/workBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:onClick">operatorOnClick</item>
    </style>
</resources>